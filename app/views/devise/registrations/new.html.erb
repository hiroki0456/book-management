<div class="new-regist-box">
  <div class="new-regist-box__regist-box">
    <div class="new-regist-box__regist-box__text">新規会員登録</div>
    <div class="new-regist-box__regist-box__text2">ようこそ、ブクログへ。</div>
    <div class="new-regist-box__regist-box__form-box">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "new-regist-box__regist-box__form-box__form"}) do |f| %>

        <div class="new-regist-box__regist-box__form-box__form__field">
          <%= f.label "メールアドレス",  class: "new-regist-box__regist-box__form-box__form__field__text" %>
          <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力してください", class: "new-regist-box__regist-box__form-box__form__field__input" %>
          <% if flash[:notice].present? && flash[:notice]["email"].include?("can't be blank") %>
            <p class="error-message">メールアドレスを入力してください</p>
          <% elsif flash[:notice].present? && flash[:notice]["email"].include?("has already been taken") %>
            <p class="error-message">メールアドレスはすでに登録されています</p>
          <% elsif flash[:notice].present? && flash[:notice]["email"].include?("is invalid") %>
            <p class="error-message">不正なメールアドレスです</p>
          <% end %>
        </div>

        <div class="new-regist-box__regist-box__form-box__form__field">
          <%= f.label "パスワード", class: "new-regist-box__regist-box__form-box__form__field__text" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力してください", class: "new-regist-box__regist-box__form-box__form__field__input" %>
          <% if flash[:notice].present? && flash[:notice]["password"]&.include?("can't be blank") %>
            <p class="error-message">パスワードを入力してください</p>
          <% elsif flash[:notice].present? && flash[:notice]["password"]&.include?("is invalid") %>
            <p class="error-message">パスワードは半角英数字混合で入力してください</p>
          <% end %>
        </div>

        <div class="new-regist-box__regist-box__form-box__form__field">
          <%= f.label "パスワード（確認用）", class: "new-regist-box__regist-box__form-box__form__field__text" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）を入力してください", class: "new-regist-box__regist-box__form-box__form__field__input" %>
          <% if flash[:notice].present? && flash[:notice]["password_confirmation"]&.include?("doesn't match Password") %>
            <p class="error-message">パスワードが一致していません</p>
          <% end %>
        </div>

        <div class="new-regist-box__regist-box__form-box__form__submit-box">
          <%= f.submit "会員登録する", class: "new-regist-box__regist-box__form-box__form__submit-box__btn" %>
        </div>
      <% end %>
    </div>
      <%= render "devise/shared/links" %>
  </div>
</div>